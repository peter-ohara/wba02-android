<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pascoapp.wba02_android.QuestionFillInFragment"
    tools:showIn="@layout/activity_question_fillin">

    <Button
        android:text="Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/rightButton"
        android:background="@color/primary"
        android:theme="@style/greenButton"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="@+id/activity_question"
        app:layout_constraintBottom_toBottomOf="@+id/activity_question"
        app:layout_constraintHorizontal_bias="0.21" />

    <Button
        android:text="Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/leftButton"
        android:theme="@style/greenButton"
        android:background="@color/primary"
        app:layout_constraintLeft_toLeftOf="@+id/activity_question"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="@+id/activity_question" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="567dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintGuide_begin="192dp" />

    <TextView
        android:text="TextView"
        android:layout_width="59dp"
        android:layout_height="18dp"
        android:id="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/activity_question"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_question"
        app:layout_constraintBottom_toTopOf="@+id/rightButton"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
