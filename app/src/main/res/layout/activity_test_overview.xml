<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.pascoapp.wba02_android.TestOverviewActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                app:srcCompat="@drawable/header_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:id="@+id/headerBackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_marginLeft="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_file_document_box_white_48dp"
                    android:id="@+id/document_icon"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:text="ENGL 213"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/courseCode"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/document_icon"
                    android:layout_marginTop="17dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

                <RelativeLayout
                    android:id="@+id/testNameWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="21dp"
                    android:layout_below="@id/courseCode">

                    <TextView
                        android:text="Communication Skills  |  "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/courseName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:text="Marh 2016 Midsem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/testName"
                        android:layout_toRightOf="@id/courseName"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                </RelativeLayout>



                <TextView
                    android:text="2h 30m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/testDuration"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/testNameWrapper"
                    android:layout_marginTop="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_test_overview"
        android:id="@+id/include" />

    <Button
        android:id="@+id/startButton"
        android:theme="@style/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Start ->" />

</android.support.design.widget.CoordinatorLayout>
