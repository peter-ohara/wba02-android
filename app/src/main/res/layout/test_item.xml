<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"
android:layout_marginTop="4dp"
android:layout_marginBottom="4dp"
    >


<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout5">


    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        tools:src="@mipmap/ic_launcher"
        android:id="@+id/testIcon"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout5"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout5"
        android:layout_marginTop="12dp" />

    <TextView
        tools:text="2013 Mid Semester Exam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/testName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@+id/testIcon"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout5"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout5"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        tools:text="Prof. Kwame Nkrumah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lecturerName"
        app:layout_constraintLeft_toLeftOf="@+id/testName"
        app:layout_constraintTop_toBottomOf="@+id/testName"
        app:layout_constraintRight_toRightOf="@+id/testName" />

    <TextView
        tools:text="30 q"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/questionCount"
        android:textColor="@color/accent"
        app:layout_constraintLeft_toLeftOf="@+id/lecturerName"
        app:layout_constraintTop_toBottomOf="@+id/lecturerName"
        app:layout_constraintRight_toRightOf="@+id/lecturerName"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout5"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
