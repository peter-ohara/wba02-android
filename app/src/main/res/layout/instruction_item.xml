<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="instruction"
            type="String" />
    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintLayout3"
    android:paddingBottom="8dp">

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:srcCompat="@drawable/ic_checkbox_blank_circle_grey600_18dp"
        android:id="@+id/blankCircleCheckbox"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        android:layout_marginTop="12dp" />

    <TextView
        tools:text="Circle the correct answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/instruction"
        app:layout_constraintLeft_toRightOf="@+id/blankCircleCheckbox"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.29" />

</android.support.constraint.ConstraintLayout>
</layout>
