<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="test"
            type="com.pascoapp.wba02_android.takeTest.TestViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_test_overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.pascoapp.wba02_android.takeTest.TestOverview.TestOverviewFragment"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/lecturerIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@{test.lecturerIcon}"
            tools:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_test_overview"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/fragment_test_overview" />

        <TextView
            android:id="@+id/lecturerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{test.lecturerName}"
            tools:text="Prof. Isaac Gob3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintLeft_toRightOf="@+id/lecturerIcon"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/lecturerIcon"
            app:layout_constraintRight_toRightOf="@+id/fragment_test_overview"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/lecturerIcon"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/programmesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programmes"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_test_overview"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/lecturerIcon"
            android:layout_marginTop="8dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/programmesList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_test_overview"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/programmesTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/fragment_test_overview"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/instructionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_test_overview"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/programmesList"
            android:layout_marginTop="8dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/instructionsList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_test_overview"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/instructionsTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/fragment_test_overview"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />


    </android.support.constraint.ConstraintLayout>
</layout>