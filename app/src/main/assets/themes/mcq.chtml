<!DOCTYPE html>
<html>
<head>
    <title>{$questionNumber}</title>
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    {% include css %}
    {% include discussion_css %}
</head>
<body>

<div class="page">
    <div class="row">
        <div class="mcq-question"> 
            <span>{$question}</span>
        </div>
    </div>
    <div class="row">
        <form id="options">
            <div class="mcq-answer-box">

                <ul>
                    {% loop in $choices as $key:$choice first_last="true" %}
                    <li>
                        <span class="choice">{$key}</span>
                        {% if $key == $usersAnswer %}
                        <input type="radio" name="choices" value="{$key}" id="{$key}" checked>
                        {% else %}
                        <input type="radio" name="choices" value="{$key}" id="{$key}">
                        {% endif %}
                        <label for="{$key}"><span class="check"><span class="inside"></span></span>{$choice}</label>
                        {% if (!$last) %}
                        <hr>
                        {% endif %}
                    </li>
                    {% endloop %}
                </ul>

            </div>
        </form>
    </div>
    <div class="row">
        <div class="button-div">
            <div class="col-xs-6 pull-left">
                <button type="button" id="discussionButton" class="btn btn-success">Discussion</button>
            </div>
            <div class="col-xs-6 pull-right">
                <button type="button" id="checkButton" class="btn btn-info" onClick="checkMcq()">Check</button>
            </div>
        </div>
    </div>
</div>

<div id="pasco-comments" class="pasco-comments-invisible">
    <div class="comments-count-box">
        <i class="fa fa-comments-o fa-lg"></i> <span class="comments-count">{$commentCount} Comments </span>
        <hr class="comment-hr">
    </div>
    <div id="comments-container"></div>
</div>

{% include android_interface %}
{% include math_scripts %}
{% include discussion_scripts %}

</body>
</html>