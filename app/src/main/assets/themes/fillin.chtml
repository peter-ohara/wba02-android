<!DOCTYPE html>
<html>
<head>
    <title>{$questionNumber}</title>
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    {% include css %}
    {% include discussion_css %}
</head>
<body>

    <div class="page">
        <div class="row">
            <div class="mcq-question">
                <span>{$question}</span>
            </div>
        </div>
        <div class="row">
            <div class="button-div">
                <div class="col-xs-6 pull-left">
                    <button type="button" id="discussionButton" class="btn btn-success">Discussion</button>
                </div>
                <div class="col-xs-6 pull-right">
                    <button type="button" id="checkButton" class="btn btn-info" onClick="checkMcq()">Check</button>
                </div>
            </div>
        </div>
    </div>

    <div id="pasco-comments" class="pasco-comments-invisible">
        <div class="comments-count-box">
            <i class="fa fa-comments-o fa-lg"></i>
                <span class="comments-count">
                    <span id="num-comments">0</span>
                    Comments
                </span>
            <hr class="comment-hr">
        </div>
        <div id="comments-container"></div>
    </div>

    <script type="text/javascript">
        function checkFillIn() {
            var inputs = document.getElementsByClassName( 'cloze' ),
            names  = [].map.call(inputs, function( input ) {
                return input.value;
            });

            FillInAndroid.checkFillIn(names);
        }
    </script>

    {% include math_scripts %}
    {% include discussion_scripts %}
</body>
</html>

{#input_field}
    <input type="text" class="cloze">
{#}